{
	"manifest_version": 3,
	"name": "WhatTheWord",
	"description": "Define the word, on the way.",
	"version": "1.0",
	"action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"scripting"
	  ],
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"jquery.min.js",
				"jquery-ui.min.js",
				"word.js"
			]
		}
	]
}
